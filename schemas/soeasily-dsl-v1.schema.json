{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SoEasily DSL v1",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "extends": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "when": {
      "type": "string"
    },
    "then": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "params": {
          "type": "object"
        }
      },
      "required": [
        "type"
      ]
    },
    "expr": {
      "type": "string"
    },
    "conditions": {
      "type": "object"
    },
    "event": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "params": {
          "type": "object"
        }
      },
      "required": [
        "type"
      ]
    },
    "settings": {
      "type": "object",
      "properties": {
        "execution": {
          "type": "string",
          "enum": [
            "first_match",
            "all_match"
          ]
        },
        "fail_fast": {
          "type": "boolean"
        },
        "log_level": {
          "type": "string"
        }
      }
    },
    "lookup": {
      "type": "object"
    },
    "test_cases": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "input": {
            "type": "object"
          },
          "expect": {
            "type": "object"
          }
        },
        "required": [
          "input",
          "expect"
        ]
      }
    },
    "response_template": {
      "type": "object",
      "description": "Template for shaping the output response"
    }
  },
  "required": [
    "name"
  ]
}